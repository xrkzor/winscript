{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		<h1 class="intro">Connexion !</h1>
		<form action="{{ path('security_login') }}" method="post">
			<div class=form-group">
				<input placeholder="Nom d'utilisateur" required name="_username" type="text" class="form-control">
			</div>
			<div class=form-group">
				<input placeholder="Mot de passe" required name="_password" type="text" class="form-control">
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-success">Connexion</button>
				<a href="{{ path('security_registration') }}"class="btn btn-primary">Inscription</a>
			</div>
		</form>
	</div>
{% endblock %}